<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
    </jsp-property-group>
  </jsp-config>
  
  <error-page>
    <error-code>404</error-code>
    <location>/pages/errors/error_404.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/pages/errors/error_500.jsp</location>
  </error-page>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.egoramel.webproject.controller.filter.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/pages/all_users.jsp</url-pattern>
    <url-pattern>/pages/main.jsp</url-pattern>
    <url-pattern>/controller</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>RedirectIfAuthenticatedFilter</filter-name>
    <filter-class>com.egoramel.webproject.controller.filter.RedirectIfAuthenticatedFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>RedirectIfAuthenticatedFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
    <url-pattern>/pages/login.jsp</url-pattern>
    <url-pattern>/pages/registration.jsp</url-pattern>
  </filter-mapping>
</web-app>
